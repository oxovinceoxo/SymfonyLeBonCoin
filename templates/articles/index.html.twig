{% extends 'base.html.twig' %}

{% block title %}Liste des annonces{% endblock %}

{% block body %}


    <h1 class="text-center m-5">Liste de vos annonces</h1>



    <a class="btn btn-danger" href="{{ path('articles_new') }}">Ajouter une annonce</a>

        <div class="row mt-5">
            {% for article in app.user.articles %}
                <div class="col-md-3 col-sm-12 mt-5">
                    <div class="card" >
                        <img width="100%" src="/photos/{{ article.photoArticle }}">
                        <div class="card-body">
                            <h2 class="card-title">{{ article.nomArticle }}</h2>
                            <p class="card-text">{{ article.descriptionArticle }}</p>
                            <h3 class="card-text">{{ article.prixArticle }} â‚¬</h3>
                            <p class="card-text text-primary">{{ article.categories.nomCategorie}} </p>
                            <a class="btn btn-primary" href="{{ path('articles_show', {'slug':article.nomArticle|slugify,'id': article.id}) }}">detail</a>
                            {% if app.user%}
                            <a class="btn btn-danger" href="{{ path('articles_edit', {'id': article.id}) }}">editer</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
    </div>

{% endblock %}
